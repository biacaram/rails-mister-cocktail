<div class='banner'>
  <h1 class='welcome'>Mr. Cocktails <i class="fas fa-cocktail"></i></h1>
</div>
<div class='index container'>
  <div class='cards'>
    <% @cocktails.each do |cocktail| %>
      <div class='card'>
        <%= cl_image_tag cocktail.photo.key, height: 180, width: 180, crop: :fill%>
        <h4><%= link_to "#{cocktail.name}", cocktail_path(cocktail), class:'drink_name' %></h4>
      </div>
        <% end %>
  </div>
  <br>
<%= link_to 'Add cocktail', new_cocktail_path, class: 'btn btn-warning add-index' %>
</div>
